<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>Sbns Web Module</display-name>

    <servlet>
        <servlet-name>report</servlet-name>
        <servlet-class>org.lex.perf.web.HTTPReport</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>report</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>httpMonitoring</filter-name>
        <filter-class>org.lex.perf.web.HTTPFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>httpMonitoring</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>/report</welcome-file>
    </welcome-file-list>
</web-app>
